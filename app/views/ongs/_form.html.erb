<%= form_with(model: ong, local: true) do |form| %>
  <% if ong.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong><h2> seguintes campos não foram preenchidos ou estão incorretos: </h2></strong>
        <% ong.errors.full_messages.each do |message| %>
          <strong><%= message %></strong><br>

        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-4">
      <%= form.label :nome %>
      <%= form.text_field :nome, class:"form-control"%>
    </div>

    <div class="col-xs-4">
      <%= form.label :email %>
      <%= form.text_field :email, class:"form-control" %>
    </div>
  </div><br>

  <div class="row">
    <div class="col-xs-4">
      <%= form.label :estado %>
      <%= form.select :estado, Estado.pluck(:nome), {}, class:"form-control" %>
    </div>

    <div class="col-xs-4">
      <%= form.label :logo %>
      <%= form.text_field :logo, class:"form-control" %><br>
    </div>
  </div>

    <div class="actions">
      <%= form.submit "Criar Ong" , class:"btn btn-primary btn-lg active" %>
    </div>
<% end %>
